void GlobalInit() "【 Subroutine 】▒▒  GlobalInit  ▒▒"
{
    if (SettingsDeveloper[1] > 0)
    {
        LogToInspector(<"▒▒▒▒ Initialize Start @<0>  ▒▒▒▒", TotalTimeElapsed()>);
    }
    GlobalVarInit();
    GlobalHudInit();
    GlobalEffectInit();
    GlobalTextInit();
    GlobalInitialize = Max(TotalTimeElapsed(), 0.1);
}

